###############################################################################
# Example terraform.tfvars
# -----------------------------------------------------------------------------
# Copy this file to your environment directory (e.g., env/dev/terraform.tfvars)
# and fill in the placeholders. Do NOT commit real credentials or secrets.
###############################################################################

region                  = "us-east-1"          # AWS region where the EKS cluster will be deployed
environment             = "dev"                # Environment name (e.g., dev, staging, prod)
owner                   = "YOUR_NAME_HERE"     # Used for tagging and ownership tracking
identifier              = "PROJECT_PREFIX"     # Short prefix for resource names (e.g., g-dev, ventrov-dev)
endpoint_private_access = true                 # Allow private access to the EKS API
endpoint_public_access  = true                 # Allow public access to the EKS API
public_access_cidrs     = ["YOUR_IP/32"]       # Restrict access to your IP (e.g., ["123.45.67.89/32"])
grafana_admin_user      = ""                   # Grafana admin username
grafana_admin_password  = ""                   # Grafana admin password (use a secure one)
